<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_shape"
    android:backgroundTint="@color/background_color"
    android:padding="10pt"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/text_color"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:text="Поездка завершена!"
        android:layout_height="wrap_content"/>
    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/finish_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5pt"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:text="9 Марта 2023, 14:23" />

    <TextView
        android:id="@+id/finish_transport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5pt"
        android:textColor="@color/text_color"
        android:textSize="20sp"
        android:text="Самокат ЭСМ-2"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5pt"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/finish_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5pt"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:text="10 км"/>
        <TextView
            android:id="@+id/finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5pt"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:text="00:34"/>
        <TextView
            android:id="@+id/finish_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:textSize="20sp"
            android:text="250 ₽"
            android:background="@android:color/transparent"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5pt"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:text="Ждем вас снова!" />

    <Button
        android:id="@+id/finish_dialog_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/text_color"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="5pt"
        android:backgroundTint="@color/background_button_color"
        android:text="Спасибо"/>
</LinearLayout>
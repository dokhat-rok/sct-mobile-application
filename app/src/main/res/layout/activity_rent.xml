<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color"
    tools:context=".activity.RentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5pt"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/rent_remove_button"
                style="@android:style/Widget.DeviceDefault.Light.ImageButton"
                android:layout_width="20pt"
                android:layout_height="wrap_content"
                android:layout_marginTop="3pt"
                android:background="@null"
                android:src="@android:drawable/ic_menu_close_clear_cancel" />
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:text="Поездки"
                android:textColor="@color/text_color"
                android:textSize="32sp"
                tools:ignore="MissingConstraints" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:orientation="vertical">

            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="?android:attr/listDivider" />
            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5pt"
                android:layout_marginTop="5pt"
                android:background="#00FFFFFF"
                android:text="История поездок"
                android:layout_marginBottom="5pt"
                android:textColor="@color/text_color"
                android:textSize="24sp"
                tools:ignore="MissingConstraints" />

            <ScrollView
                android:layout_width="match_parent"
                android:id="@+id/rent_scroll"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/rent_list_rent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/background_button_color"
                    android:orientation="vertical"/>
            </ScrollView>

        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
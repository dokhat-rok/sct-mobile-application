<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/rounded_shape"
    android:backgroundTint="@color/background_color"
    android:padding="5pt"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10pt">

        <ImageButton
            android:id="@+id/filter_remove_button"
            style="@android:style/Widget.DeviceDefault.Light.ImageButton"
            android:layout_width="10pt"
            android:layout_height="10pt"
            android:layout_marginTop="1pt"
            android:layout_marginEnd="5pt"
            android:background="@null"
            android:src="@android:drawable/ic_menu_close_clear_cancel"/>
        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ФИЛЬТРЫ"
            android:textColor="@color/text_color"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Switch
            android:id="@+id/filter_parking_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ПАРКОВКИ"
            android:textSize="16sp"
            android:checked="true"
            android:textColor="@color/text_color"
            android:thumbTint="@color/thump"
            android:trackTint="@color/track"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/filter_bicycle_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ВЕЛОСИПЕДЫ"
            android:textSize="16sp"
            android:checked="true"
            android:textColor="@color/text_color"
            android:thumbTint="@color/thump"
            android:trackTint="@color/track"
            android:layout_marginTop="5pt"
            tools:ignore="UseSwitchCompatOrMaterialXml" />

        <Switch
            android:id="@+id/filter_scooter_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="САМОКАТЫ"
            android:textSize="16sp"
            android:checked="true"
            android:textColor="@color/text_color"
            android:thumbTint="@color/thump"
            android:trackTint="@color/track"
            android:layout_marginTop="5pt"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </LinearLayout>
</LinearLayout>
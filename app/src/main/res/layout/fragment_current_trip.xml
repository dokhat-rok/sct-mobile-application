<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_gravity="bottom"
    android:layout_marginBottom="5pt"
    android:background="@color/background_color"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/current_transport_image"
        android:layout_width="24pt"
        android:layout_height="24pt"
        android:layout_weight="1.0"
        android:layout_marginStart="5pt"
        android:src="@drawable/current_scooter"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="5pt"
        android:orientation="vertical"
        android:layout_weight="1.0">

        <TextView
            android:id="@+id/current_name_transport"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/text_color"
            android:textSize="16sp"
            android:text="Самокат САМ-2"
            />
        <TextView
            android:id="@+id/current_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_color"
            android:layout_gravity="center_horizontal"
            android:textSize="16sp"
            android:text="00:23:41"/>
    </LinearLayout>

    <Button
        android:id="@+id/current_end_button"
        android:layout_width="70pt"
        android:layout_height="20pt"
        android:layout_marginEnd="5pt"
        android:layout_weight="1.0"
        android:backgroundTint="@color/background_button_color"
        android:textColor="@color/text_button_color"
        android:layout_gravity="center_vertical"
        android:text="Завершить"
        android:textSize="16sp"/>

</LinearLayout>
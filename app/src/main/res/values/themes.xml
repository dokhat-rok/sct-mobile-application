<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sctmobileapplication" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#1a7e90</item>
        <item name="colorPrimaryVariant">#1a7e90</item>
        <item name="colorOnPrimary">#1a7e90</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">#1a7e90</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="ProgressBarStyle">
        <item name="colorAccent">@color/background_button_color</item>
    </style>
    <style name="WithoutShadowStyle" parent="android:Theme">
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>